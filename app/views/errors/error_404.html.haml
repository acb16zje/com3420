- content_for :title, "Page not found"


%section.hero.is-large
  .hero-body
    .container
      .columns
        .column.is-3.is-offset-2
          %h1.title{:style => "font-size: 70px;color:#ff470f"} 404
          %h2.subtitle.is-3 Page not found
        .column.is-5
          %p
            The requested page could not be found. Please check the address and try again. If you are unsure you may #{link_to 'return to the home page', root_path}.
          %br
          %p
            If you continue to see this message please send a description of the problem to:
            = mail_to "support@epigenesys.org.uk"

- content_for :title, "Editing #{@category.name}"

%section.hero
  .hero-body
    .container.has-text-centered
      .column.is-10.is-offset-1
        %h3.title Editing category
        .box
          = simple_form_for(@category) do |f|
            = f.error_notification

            .field.is-horizontal
              .field-label.is-normal
                %label.label Category
              .field-body
                .field
                  %p.control.is-expanded
                    = f.input :name, label: false, required: '', placeholder: 'Category', input_html: {class: 'input'}
            .field.is-horizontal
              .field-label.is-normal
                %label.label Tag
              .field-body
                .field
                  %p.control.is-expanded
                    = f.input :tag, label: false, required: '', placeholder: 'Category', input_html: {class: 'input'}
            %br
            .field.is-horizontal
              .field-label.has-text-left
                -#Left empty for spacing
              .field-body
                .field.is-grouped.is-grouped-right
                  .control
                    = link_to 'Cancel' , categories_path, class: 'button is-block is-light'
                  .control
                    = f.submit 'Save changes', class: 'button is-block is-success'

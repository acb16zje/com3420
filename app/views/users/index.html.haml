- content_for :title, "Users"

%br/
.container.is-fluid
  - if not notice.nil?
    .columns
      .column.is-4.is-offset-4
        .notification.is-success.has-text-centered
          %button.delete
          = notice

  %p.title.has-text-centered Current users
  %p.title.has-text-centered
    = link_to 'Create new', new_user_path, class: 'button is-success'
  %table#users.table.is-striped.is-bordered{:cellspacing => "0", :width => "100%"}
    %thead
      %tr
        %th a
        %th b
        %th c
        %th Action
    %tbody
      - @users.each do |user|
        %tr
          %td= user.forename
          %td
          %td
          %td
            .field.is-grouped.is-grouped-centered
              %p.control
                = link_to user, class: 'button is-primary' do
                  %span.icon
                    %i.class.fas.fa-eye
                  %span View
              %p.control
                = link_to edit_user_path(user), class: 'button is-link' do
                  %span.icon
                    %i.class.fas.fa-edit
                  %span Edit
              %p.control
                = link_to user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-danger' do
                  %span.icon
                    %i.class.fas.fa-trash
                  %span Delete

- content_for :title, "Asset Manager"

%br/
.container.is-fluid
  - if not notice.nil?
    .columns
      .column.is-4.is-offset-4
        .notification.is-success.has-text-centered
          %button.delete
          = notice

  %p.title.has-text-centered Asset Managers
  %table#users.table.is-striped.is-bordered{:cellspacing => "0", :width => "100%"}
    %thead
      %tr
        %th Name
        %th Email
        %th Action
    %tbody
      - @users.each do |user|
        - if user.permission_id != 1
          %tr
            %td.has-text-centered= user.givenname.to_s + ' ' + user.sn.to_s
            %td.has-text-centered= user.email
            %td
              .field.is-grouped.is-grouped-centered
                %p.control
                  = link_to manager_items_path(user_id: user.id), class: 'button is-primary' do
                    %span.icon
                      %i.class.fas.fa-eye
                    %span View Assets

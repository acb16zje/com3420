- content_for :title, "Home"

%section.section
  .container.is-fluid
    - if not notice.nil?
      .columns
        .column.is-4.is-offset-4
          .notification.is-success.has-text-centered
            %button.delete
            = notice

    .columns.has-text-centered
      .column.is-half.is-offset-one-quarter
        = image_tag("amrc_main.svg", width: "1000")
    .columns
      .column.is-half.is-offset-one-quarter
        %br
        = form_tag items_path, enforce_utf8: false, method: :get do
          .field.has-addons
            .control.is-expanded
              %input.input{type:'text', name: 'category_name', placeholder: 'Search for an asset'}
            .control
              %button.button.is-info{type:'submit'}
                Search

    %br
    - if @user_home_categories.any?
      - @user_home_categories.each_slice(5) do |slice|
        .columns
          - slice.each do |usercat|
            .column
              .card
                .card-content.hero.is-small.is-light
                  .columns.hero-body
                    .column.has-text-centered
                      - if usercat.category.categoryicon?
                        .icon.is-large
                          = image_tag(usercat.category.categoryicon.url, alt: 'Icon')
                      - else
                        %span.icon.is-large
                          %i.fas.fa-camera.fa-7x
                %footer.card-footer
                  %p.card-footer-item
                    %span
                      View
                      = link_to items_path(category_name: usercat.category.name) do
                        = usercat.category.name
          .column
            .card
              .card-content.hero.is-small.is-light
                .columns.hero-body
                  .column.has-text-centered
                    %span.icon.is-large>
                      %i.fas.fa-plus.fa-7x
              %footer.card-footer
                %p.card-footer-item
                  %span
                    = link_to 'Add Favourite', new_user_home_category_path, class:'button is-link is-block is-small'
    - else
      .columns
        .column
          .card
            .card-content.hero.is-small.is-light
              .columns.hero-body
                .column.has-text-centered
                  %span.icon.is-large>
                    %i.fas.fa-plus.fa-7x
            %footer.card-footer
              %p.card-footer-item
                %span
                  = link_to 'Add Favourite', new_user_home_category_path, class:'button is-link is-block is-small'



- content_for :title, "Home"

%html
  %head

  %body
    .container.is-fluid
      .columns.has-text-centered
        .column.is-half.is-offset-one-quarter
          %br
          %br
          = image_tag("amrc_main.svg", width: "1000")
      .columns
        .column.is-half.is-offset-one-quarter
          %br
          %br
          = form_tag items_path, enforce_utf8: false, method: :get do
            .field.has-addons
              .control.is-expanded
                %input.input{type:'text', name: 'category_name', placeholder: 'Search for an asset'}
              .control
                %button.button.is-info{type:'submit'}
                  Search
      .columns
        -@user_home_categories.each do |usercat|
          .column
            .card
              .card-content.hero.is-small.is-light
                .columns.hero-body
                  .column.has-text-centered
                    %br/
                    - if usercat.category.categoryicon?
                      .icon.is-large
                        = image_tag(usercat.category.categoryicon.url, alt: 'Icon')
                    - else
                      %span.icon.is-large>
                        %i.fas.fa-camera.fa-7x
              %footer.card-footer
                %p.card-footer-item
                  %span
                    View
                    = link_to items_path(category_name: usercat.category.name) do
                      = usercat.category.name

      .container.is-fluid
        .columns
          .column
            .card
              .card-content.hero.is-small.is-light
                .columns.hero-body
                  .column.has-text-centered
                    %br/
                    %span.icon.is-large>
                      %i.fas.fa-plus.fa-7x
              %footer.card-footer
                %p.card-footer-item
                  %span
                    = link_to 'Add Favourite', new_user_home_category_path, class:'button is-link is-block'
